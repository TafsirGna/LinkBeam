{
  "manifest_version": 3,
  "name": "LinkBeam",
  "description": "LinkBeam chrome extension ",
  "version": "0.1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "app_logo.png"
  },
  "background": {
    "service_worker": "./assets/service_worker.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "scripting"
  ],
  "web_accessible_resources": [{
     "matches": ["*://*/*"],
     "resources": ["/assets/web_ui.js"]
  }],
  "host_permissions": ["*://*/*"]
}
